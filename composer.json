{
  "name": "blast/orm",
  "description": "Framework agnostic data access and persistence based on Doctrine 2 DBAL",
  "keywords": [
    "sql",
    "database",
    "orm",
    "query"
  ],
  "homepage": "https://github.com/phpthinktank/blast-orm",
  "license": "MIT",
  "authors": [
    {
      "name": "Marco Bunge",
      "email": "mjls@web.de",
      "homepage": "http://www.marco-bunge.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "doctrine/dbal": "~2.5.1",
    "doctrine/inflector": "~1.1.0",
    "league/event": "~2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "4.*"
  },
  "autoload": {
    "psr-4": {
      "Blast\\Orm\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Blast\\Tests\\Orm\\": "tests"
    }
  },
  "scripts": {
    "test": [
      "cd vendor/phpunit/phpunit",
      "phpunit --configuration phpunit.xml"
    ]
  }
}
